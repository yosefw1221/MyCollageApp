<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:paddingLeft="70dp"
        android:paddingTop="20dp"
        android:paddingRight="70dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/app_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tour_one_title"
        style="@style/TextAppearance.MaterialComponents.Headline3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/wellcome"
        android:textColor="#fff"
        android:textStyle="normal"
        app:fontFamily="@font/roboto_thin" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tour_one_desc"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:paddingLeft="45dp"
        android:text="@string/tour_first_desc"
        android:textColor="#eed"
        app:fontFamily="@font/roboto_thin" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/tour_eng_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/tour_radio_selector"
            android:gravity="center"
            android:text="English"
            android:textColor="#fff"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/tour_am_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:button="@null"
            android:background="@drawable/tour_radio_selector"
            android:gravity="center"
            android:text="አማርኛ"
            android:textColor="#fff"
            tools:ignore="HardcodedText" />
    </RadioGroup>
</LinearLayout>