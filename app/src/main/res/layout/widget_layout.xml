<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/widget_header"
        android:padding="10dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/widget_date_tv"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="99"
            android:paddingLeft="10dp"
            android:text="Update Widget"
            android:textColor="#fee"
            android:textStyle="bold" />

        <Button
            android:id="@+id/widget_change_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_swap_vert_white_18dp" />

        <Button
            android:id="@+id/widget_next_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C301579B" />

    <ListView
        android:id="@+id/widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:footerDividersEnabled="false"
        android:fastScrollAlwaysVisible="true"
        android:scrollbarStyle="outsideOverlay"
        android:fadeScrollbars="false"
        android:headerDividersEnabled="false"
        android:listSelector="@color/widget_bg" />

    <RelativeLayout
        android:id="@+id/widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#0D47A1"
            android:shadowDx="5"
            android:shadowDy="5"
            android:text="@string/noting_happening_today"
            android:textColor="#fef" />
    </RelativeLayout>
</LinearLayout>